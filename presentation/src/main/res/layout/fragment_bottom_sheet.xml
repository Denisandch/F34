<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="375dp"

        android:paddingStart="44dp"
        android:paddingTop="24dp"
        android:paddingEnd="30dp"
        android:paddingBottom="44dp"
        tools:context=".BottomSheetFragment">

        <!-- TODO: Update blank fragment layout -->


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/rounded_corners_buttons_dark"
            android:src="@drawable/cancel_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:text="Filter options"
            app:layout_constraintBottom_toBottomOf="@+id/done_button"
            app:layout_constraintEnd_toStartOf="@id/done_button"
            app:layout_constraintTop_toTopOf="@id/done_button" />

        <Button
            android:id="@+id/done_button"
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:text="Done"
            android:background="@drawable/rounded_corners_buttons_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/done_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"/>
        <Spinner
            android:layout_width="340dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"/>
        <Spinner
            android:layout_width="340dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"/>
        <Spinner
            android:layout_width="340dp"
            android:layout_height="40dp"/>


    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
